{
  "info": {
    "name": "Lost & Found API",
    "description": "NIE College Lost & Found API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test.user@nie.ac.in\",\n  \"password\": \"password123\",\n  \"phone\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@nie.ac.in\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": ["{{baseUrl}}"],
              "path": ["posts"]
            }
          },
          "response": []
        },
        {
          "name": "Get Lost Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts?type=lost",
              "host": ["{{baseUrl}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "type",
                  "value": "lost"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Found Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/posts?type=found",
              "host": ["{{baseUrl}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "type",
                  "value": "found"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Post By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/posts/:id",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Lost Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "type",
                  "value": "lost",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "Lost Wallet",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Brown leather wallet lost near cafeteria",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Accessories",
                  "type": "text"
                },
                {
                  "key": "color",
                  "value": "Brown",
                  "type": "text"
                },
                {
                  "key": "location",
                  "value": "Cafeteria",
                  "type": "text"
                },
                {
                  "key": "dateTime",
                  "value": "2025-11-20T12:00:00.000Z",
                  "type": "text"
                },
                {
                  "key": "securityQuestion",
                  "value": "What card is inside?",
                  "type": "text"
                },
                {
                  "key": "securityAnswer",
                  "value": "visa card",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": ["{{baseUrl}}"],
              "path": ["posts"]
            }
          },
          "response": []
        },
        {
          "name": "Create Found Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "type",
                  "value": "found",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "Found Earphones",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "White wireless earphones found in classroom",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Electronics",
                  "type": "text"
                },
                {
                  "key": "color",
                  "value": "White",
                  "type": "text"
                },
                {
                  "key": "location",
                  "value": "Room 301",
                  "type": "text"
                },
                {
                  "key": "dateTime",
                  "value": "2025-11-20T10:00:00.000Z",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": ["{{baseUrl}}"],
              "path": ["posts"]
            }
          },
          "response": []
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"claimed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/:id",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/posts/:id",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Claim Lost Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answer\": \"mountain landscape\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/:lostId/claim",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":lostId", "claim"],
              "variable": [
                {
                  "key": "lostId",
                  "value": "LOST_POST_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get My Posts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/posts/my-posts",
              "host": ["{{baseUrl}}"],
              "path": ["posts", "my-posts"]
            }
          },
          "response": []
        },
        {
          "name": "Get Matches for Post",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/posts/:postId/matches",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":postId", "matches"],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/notifications",
              "host": ["{{baseUrl}}"],
              "path": ["notifications"]
            }
          },
          "response": []
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/notifications/:id/read",
              "host": ["{{baseUrl}}"],
              "path": ["notifications", ":id", "read"],
              "variable": [
                {
                  "key": "id",
                  "value": "NOTIFICATION_ID_HERE"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Mark All as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/notifications/read-all",
              "host": ["{{baseUrl}}"],
              "path": ["notifications", "read-all"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
